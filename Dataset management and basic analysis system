import csvimport osclass DataSet:    def __init__(self):        # Variables to store data        self.data_values = []        self.categories = set()        self.stats = {}    # Task 1 & 2: File Handling & Error Handling    def load_data(self, filename):        print(f"Attempting to load: {filename}...")                # 2a. Handle case where file does not exist        if not os.path.exists(filename):            print(f"Error: The file '{filename}' was not found.")            return False        try:            with open(filename, 'r') as file:                reader = csv.reader(file)                                # 2b. Handle empty file                try:                    header = next(reader) # Skip header                except StopIteration:                    print("Error: The file is empty.")                    return False                for row in reader:                    # Task 6: Extract unique categories (Assuming Column 0 is Category)                    if len(row) > 0:                        self.categories.add(row[0])                                        # Task 1b: Store numerical data (Assuming Column 1 is Value)                    if len(row) > 1:                        try:                            value = float(row[1])                            self.data_values.append(value)                        except ValueError:                            # 2b. Handle invalid (non-numeric) values                            print(f"Warning: Skipped invalid value '{row[1]}'")            return True        except Exception as e:            print(f"An unexpected error occurred: {e}")            return False    # Task 3 & 4: Functions, Operators & Loops    def calculate_statistics(self):        if not self.data_values:            print("No valid numerical data to analyze.")            return        # Initialize variables for loop        total = 0.0        count = 0                # Set initial min/max to the first element to ensure accurate comparison        minimum = self.data_values[0]        maximum = self.data_values[0]        # 4b. Loop to traverse dataset        for value in self.data_values:            # Arithmetic operators            total = total + value            count = count + 1                        # Compare for min/max            if value < minimum:                minimum = value            if value > maximum:                maximum = value        # Calculate Average        average = total / count if count > 0 else 0        # Store results        self.stats = {            "Total": total,            "Average": average,            "Minimum": minimum,            "Maximum": maximum,            "Count": count        }        return self.stats    # Task 5 & 6b: Display Results and Conditional Logic    def display_results(self, threshold=50.0):        if not self.stats:            return        print("\n--- Analysis Results ---")        print(f"Total Records Analyzed: {self.stats['Count']}")        print(f"Total Sum: {self.stats['Total']}")        print(f"Minimum Value: {self.stats['Minimum']}")        print(f"Maximum Value: {self.stats['Maximum']}")        print(f"Average Value: {self.stats['Average']:.2f}")                # Task 6b: Display total number of unique categories        print(f"Unique Categories found: {len(self.categories)} ({', '.join(self.categories)})")        # Task 5: Conditional Statements        print(f"Performance Check (Threshold: {threshold}): ", end="")        if self.stats['Average'] > threshold:            print("High Performance")        else:            print("Needs Improvement")    # Task 8: Saving Results to File    def save_report(self, filename="report.txt"):        if not self.stats:            return                    try:            with open(filename, 'w') as f:                f.write("Dataset Analysis Report\n")                f.write("=======================\n")                for key, value in self.stats.items():                    f.write(f"{key}: {value}\n")                f.write(f"Unique Categories Count: {len(self.categories)}\n")                f.write("=======================\n")            print(f"\nReport successfully saved to '{filename}'.")        except IOError:            print("Error: Could not write to report file.")# --- Main Execution Block ---if __name__ == "__main__":    # 0. Helper: Create a dummy CSV file for testing    csv_file = "student_marks.csv"    with open(csv_file, "w", newline="") as f:        writer = csv.writer(f)        writer.writerow(["Subject", "Score"])        writer.writerow(["Math", "85.5"])        writer.writerow(["Science", "92.0"])        writer.writerow(["History", "45.5"])        writer.writerow(["Math", "invalid_entry"]) # Testing error handling        writer.writerow(["English", "78.0"])        writer.writerow(["Science", "30.0"])    # Task 7: Object-Oriented Programming (OOP) usage    # Create object    analysis_system = DataSet()    # Load data    if analysis_system.load_data(csv_file):        # Calculate statistics        analysis_system.calculate_statistics()                # Display results (Threshold set to 60 for High Performance)        analysis_system.display_results(threshold=60.0)
save report
analysis_system.save_report()